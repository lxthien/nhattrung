<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}{{ get_setting('siteName') }}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="robots" content="noindex" />
        <link rel="icon" href="{{ asset('favicon.ico') }}">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/sufeeadmin/assets/css/normalize.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/sufeeadmin/assets/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/sufeeadmin/assets/css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/sufeeadmin/assets/css/themify-icons.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/sufeeadmin/assets/css/flag-icon.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/sufeeadmin/assets/css/cs-skin-elastic.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/sufeeadmin/assets/css/lib/datatable/dataTables.bootstrap.min.css') }}">
            <!-- <link rel="stylesheet" href="{{ asset('assets/sufeeadmin/assets/css/bootstrap-select.less') }}"> -->
            <link rel="stylesheet" href="{{ asset('assets/sufeeadmin/assets/scss/style.css') }}">
            <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
            <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
        {% endblock %}
    </head>

    <body id="{% block body_id %}{% endblock %}" class="{% block body_class %}{% endblock %}">

        {% block sidebar %}
            {{ include('admin/layout/sidebar.html.twig') }}
        {% endblock %}

        <!-- Right Panel -->
        <div id="right-panel" class="right-panel">
            {% block header_panel %}
                {{ include('admin/layout/header.html.twig') }}
            {% endblock %}

            {% block breadcrumbs %}
                {# {{ include('admin/layout/breadcrumbs.html.twig') }} #}
            {% endblock %}

            {% block flash_messages %}
                {{ include('admin/common/_flash_messages.html.twig') }}
            {% endblock %}

            {% block main %}
                {# TODO #}
            {% endblock %}
        </div>
        <!-- Right Panel -->

        {% block javascripts %}
            <script src="{{ asset('assets/sufeeadmin/assets/js/vendor/jquery-2.1.4.min.js') }}"></script>
            <script src="{{ asset('assets/sufeeadmin/assets/js/popper.min.js') }}"></script>
            <script src="{{ asset('assets/sufeeadmin/assets/js/plugins.js') }}"></script>
            <script src="{{ asset('assets/sufeeadmin/assets/js/main.js') }}"></script>

            <script src="{{ asset('build/manifest.js') }}"></script>
            <script src="{{ asset('build/js/common.js') }}"></script>
        {% endblock %}
    </body>
</html>
