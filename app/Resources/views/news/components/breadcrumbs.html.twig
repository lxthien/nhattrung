{% if type is defined %}
    <div class="breadcrumbs {% if type is defined %}type-category{% endif %}">
        <div class="{% if type is defined %}container{% endif %}">
            <div class="row">
                <div class="col-md-12">
                    {# Breadcrum #}
                    {{ wo_render_breadcrumbs() }}

                    {% if type is defined and type is not null %}
                        <h1 class="title">{{ title }}</h1>

                        <div class="description">
                            <p>{{ description|raw }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="col-12 col-md-12 col-lg-12">
        <div class="breadcrumbs">
            <div class="{% if type is defined %}container{% endif %}">
                <div class="row">
                    <div class="col-md-12">
                        {# Breadcrum #}
                        {{ wo_render_breadcrumbs() }}

                        {% if type is defined and type is not null %}
                            <h1 class="title">{{ title }}</h1>

                            <div class="description">
                                <p>{{ description|raw }}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}